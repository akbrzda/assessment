# =======================
# ОБЩИЕ ПЕРЕМЕННЫЕ
# Скопируйте в .env и заполните.
# =======================

# БАЗА ДАННЫХ
DB_HOST=localhost
DB_PORT=3306
DB_NAME=assessment_system
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# BACKEND (NODE)
NODE_ENV=development
PORT=3001
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001,http://localhost:5174

# TELEGRAM BOT
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# TELEGRAM ЛОГИРОВАНИЕ
LOG_BOT_TOKEN=your_log_bot_token_here
LOG_CHAT_ID=your_log_chat_id
LOG_THREAD_ID=your_log_thread_id

# MINIAPP / BOT UI
MINI_APP_URL=https://your-miniapp-url.example

# JWT СЕКРЕТЫ
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production

# ФРОНТЕНДЫ
API_BASE_URL=http://localhost:3001/api
NOTIFICATION_SLA=[{"label":"24 часа","hours":24},{"label":"6 часов","hours":6},{"label":"1 час","hours":1}]
NOTIFICATION_CHECK_INTERVAL_MINUTES=15

# ОБЩИЕ НАСТРОЙКИ
SUPERADMIN_IDS=123456789,987654321
INVITE_EXPIRATION_DAYS=7
